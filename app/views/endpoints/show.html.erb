<%- model_class = Endpoint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong>
  <span><%= @endpoint.name %></span>
</div>
<div>
  <strong><%= model_class.human_attribute_name(:endpoint_url) %>:</strong>
  <span><%= @endpoint.endpoint_url %></span>
</div>
<div>
  <strong><%= model_class.human_attribute_name(:project_id) %>:</strong>
  <span><%= @endpoint.project_id %></span>
</div>

<br/>

<%= link_to t('.back', :default => t("helpers.links.back")),
              endpoints_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_endpoint_path(@endpoint), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              endpoint_path(@endpoint),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
